// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id          String   @id
  name        String
  role        String?
  emoji       String?
  color       String?
  category    String?
  status      String   @default("idle") // idle, busy, thinking, error, offline
  load        Int      @default(0)
  skills      String   // Stored as JSON string
  stats       String?  // Stored as JSON string
  isReal      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tasks            TaskAgent[]
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  knowledgeItems   AgentKnowledge[]
}

model Project {
  id           String   @id @default(uuid())
  name         String
  description  String?
  status       String   @default("active") // active, completed, archived
  repoUrl      String?
  clientName   String?
  startDate    DateTime @default(now())
  endDate      DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // New logic fields
  analysisResults String?  @default("{}") // JSON string with PM analysis
  suggestedAgents String?  @default("[]") // JSON array of agent IDs suggested by PM
  assignedAgents  String?  @default("[]") // JSON array of agent IDs currently on project
  reports         String?  @default("[]") // JSON array of report objects
  localPath       String?                // Local path to the repository
  businessModel   String?  @default("{}") // JSON string for Business Model Canvas
  aiAnalysis      String?  @default("{}") // JSON string for Multi-Agent AI Analysis
  lastAnalyzedAt  DateTime?               // Timestamp of last multi-agent analysis
  
  tasks            Task[]
  recommendations  Recommendation[]
  meetings         Meeting[]
}

model Task {
  id           String   @id @default(uuid())
  title        String
  description  String?
  status       String   @default("todo") // todo, in_progress, review, done
  priority     String   @default("medium") // low, medium, high
  tags         String   @default("[]") // JSON array of tags
  dueDate      DateTime?
  createdBy    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Project association
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id])

  // Agent execution fields
  type         String?  // task type (e.g., "feature_implementation")
  requirements String?  // JSON string with task requirements
  result       String?  // JSON string with execution result
  duration     Int?     // execution duration in ms
  assignedToId String?  // primary assigned agent (for backwards compatibility)
  
  agents       TaskAgent[]
  subtasks     Subtask[]
  comments     Comment[]
}

model TaskAgent {
  id         String   @id @default(uuid())
  taskId     String
  agentId    String
  assignedAt DateTime @default(now())
  
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  agent      Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@unique([taskId, agentId])
}

model Subtask {
  id        String   @id @default(uuid())
  taskId    String
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Comment {
  id         String   @id @default(uuid())
  taskId     String
  content    String
  authorId   String
  authorName String?
  createdAt  DateTime @default(now())
  
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Message {
  id          String   @id @default(uuid())
  fromId      String
  fromAgent   Agent    @relation("SentMessages", fields: [fromId], references: [id])
  toId        String
  toAgent     Agent    @relation("ReceivedMessages", fields: [toId], references: [id])
  content     String
  timestamp   DateTime @default(now())
  type        String   @default("chat") // chat, system, task_update
}

model Recommendation {
  id            String   @id @default(uuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title         String
  description   String
  priority      String   @default("medium") // low, medium, high
  category      String?  // e.g., "performance", "security", "architecture"
  status        String   @default("pending") // pending, implemented, dismissed, archived
  implementedAt DateTime?
  taskId        String?  // linked task if implemented
  createdBy     String   @default("pm") // agent that created the recommendation
  metadata      String?  @default("{}") // JSON for images, design refs, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Meeting {
  id              String          @id @default(uuid())
  projectId       String?
  project         Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title           String
  description     String?
  status          String          @default("active") // active, completed, cancelled
  createdBy       String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  completedAt     DateTime?
  transcript      String          @default("[]") // JSON array of messages
  linkedTasks     String          @default("[]") // JSON array of task IDs created from meeting
  participants    MeetingParticipant[]
}

model MeetingParticipant {
  id          String   @id @default(uuid())
  meetingId   String
  meeting     Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  agentId     String
  joinedAt    DateTime @default(now())
  
  @@unique([meetingId, agentId])
}

model AgentKnowledge {
  id          String   @id @default(uuid())
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  title       String
  description String?
  type        String   // document, image, video, url, text
  content     String   // File path, URL, or text content
  metadata    String?  @default("{}") // JSON for additional data
  skillTags   String   @default("[]") // JSON array of skill tags
  usageCount  Int      @default(0)
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
